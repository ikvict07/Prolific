<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="settingsDropdown" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="5.0" styleClass="popup" stylesheets="@../css/styles.css">
         <children>
            <Button alignment="CENTER_LEFT" maxWidth="Infinity" mnemonicParsing="false" text="Settings..." textAlignment="JUSTIFY">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button alignment="CENTER_LEFT" maxWidth="Infinity" mnemonicParsing="false" text="Run scanning" textAlignment="JUSTIFY">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button alignment="CENTER_LEFT" maxWidth="Infinity" mnemonicParsing="false" text="Plugins" textAlignment="JUSTIFY">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
