<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox id="settingsDropdown" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.nevertouchgrass.prolific.javafxcontroller.SettingsDropdownController" stylesheets="@/css/styles.css">
    <Label maxWidth="Infinity" textAlignment="JUSTIFY" fx:id="settingsLabel"/>
    <Label maxWidth="Infinity" onMouseClicked="#rescan" fx:id="scanLabel" textAlignment="JUSTIFY"/>
    <Label maxWidth="Infinity" fx:id="pluginsLabel" textAlignment="JUSTIFY"/>
    <Label maxWidth="Infinity" onMouseClicked="#changeLanguage" text="Change Language" textAlignment="JUSTIFY"/>
</VBox>
