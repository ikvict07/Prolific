<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox id="settingsDropdown" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.nevertouchgrass.prolific.javafxcontroller.SettingsDropdownController" stylesheets="@/css/styles.css">
    <Label maxWidth="Infinity" userData="localization:settings" fx:id="settingsLabel" onMouseClicked="#openSettings" textAlignment="JUSTIFY"/>
    <Label maxWidth="Infinity" userData="localization:scanner" fx:id="scanLabel" onMouseClicked="#rescan" textAlignment="JUSTIFY"/>
    <Label maxWidth="Infinity" userData="localization:plugins" fx:id="pluginsLabel" textAlignment="JUSTIFY"/>
    <Label maxWidth="Infinity" userData="localization:change_language" fx:id="changeLanguageButton" onMouseClicked="#changeLanguage" textAlignment="JUSTIFY"/>
</VBox>
